include $(SELF_DIR)Makefile.os

#建立 modules 目錄
MKDIR=$(shell mkdir modules)
$(MKDIR)
SHELL = /bin/sh

srcdir = $(SRC_PATH)/
builddir = $(SRC_PATH)/
top_srcdir = $(SRC_PATH)/
top_builddir = $(SRC_PATH)/
EGREP = grep -E
SED = /bin/sed
SHLIB_SUFFIX_NAME = so
SHLIB_DL_SUFFIX_NAME = so
RE2C = exit 0;
AWK = gawk
phplibdir = $(SRC_PATH)/modules
PHP_MODULES = $(phplibdir)/$(SO).so
ESTENSION_SHARED_LIBADD = -lstdc++
shared_objects_extension = $(shell echo $(CXXFILE) | sed 's/.cc/.o/g' | sed 's/.cpp/.o/g')

shared_objects_extension_file= 

# only linux support this command
shared_objects_extension_file=$(shell echo $(shared_objects_extension)  | grep -o [a-zA-Z0-9_\-]*.o | sed "/[a-zA-Z0-9\_]*.o/i\$(phplibdir)/" | sed  'N;s/\n//g' )

# Linux and Mac
#shared_objects_extension_file=$(shell echo $(shared_objects_extension)  | grep -o [a-zA-Z0-9_\-]*.o | sed -e  "s/[a-zA-Z0-9]*.o/$(phplibdir)\/&/" | sed  's/\n//g' )


